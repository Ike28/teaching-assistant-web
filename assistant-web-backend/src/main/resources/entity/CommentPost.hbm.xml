<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.pasionatii.assistant.entity">

    <class name="CommentPost" table="commentpost">
        <id name="id" column="id">
            <generator class="assigned"/>
        </id>

        <many-to-one name="post" column="id_post" not-null="false" cascade="all"/>
        <many-to-one name="user" column="id_user" not-null="false" cascade="all"/>

        <property name="text" column="text" type="text"/>

    </class>

</hibernate-mapping>
