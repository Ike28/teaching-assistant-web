<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.pasionatii.assistant.entity">
    <class name="AssignmentStatus" table="assignmentstatus">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <many-to-one name="student" column="id_student"/>
        <many-to-one name="assignment" class="Assignment" column="id_assignment" />
        <set name="taskStatuses" table="studenttask" inverse="true" cascade="save-update" lazy="true" fetch="select">
            <key>
                <column name="id_assignment" not-null="true"/>
            </key>
            <one-to-many class="com.pasionatii.assistant.entity.TaskStatus"/>
        </set>
    </class>
</hibernate-mapping>
