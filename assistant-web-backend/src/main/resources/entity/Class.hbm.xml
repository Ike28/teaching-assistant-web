<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.pasionatii.assistant.entity">
    <class name="Class" table="class">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" type="string"/>

        <set name="students" table="student" inverse="true" cascade="save-update" lazy="true" fetch="select">
            <key>
                <column name="id_class" not-null="true" />
            </key>
            <one-to-many class="com.pasionatii.assistant.entity.Student" />
        </set>
    </class>
</hibernate-mapping>
