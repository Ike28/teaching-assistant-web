<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.pasionatii.assistant.entity">

    <class name="Course" table="course">
        <id name="id" column="id">
            <generator class="assigned"/>
        </id>
        <set name="assignments" table="assignment" inverse="true" cascade="save-update" lazy="true" fetch="select">
            <key>
                <column name="id_course" not-null="true" />
            </key>
            <one-to-many class="com.pasionatii.assistant.entity.Assignment" />
        </set>
        <many-to-one name="professor" column="id_profesor" not-null="false" cascade="all"/>
        <many-to-one name="courseClass" column="id_class" not-null="false" cascade="all"/>
        <many-to-one name="subject" column="id_subject" not-null="false" cascade="all"/>

    </class>

</hibernate-mapping>
