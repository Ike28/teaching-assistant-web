<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<joined-subclass name="com.pasionatii.assistant.entity.Student" extends="com.pasionatii.assistant.entity.User">
    <key column="id" />
    <property name="firstname" column="firstname" type="string" />
    <property name="lastname" column="lastname" type="string" />
    <many-to-one name="assignedClass" class="com.pasionatii.assistant.entity.Class" column="id_class"/>
    <set name="assignmentStatuses" table="assignmentstatus" inverse="true" cascade="save-update" lazy="true" fetch="select">
        <key>
            <column name="id_student" not-null="true" />
        </key>
        <one-to-many class="com.pasionatii.assistant.entity.AssignmentStatus" />
    </set>
    <set name="grades" table="grade" inverse="true" cascade="save-update" lazy="true" fetch="select">
        <key>
            <column name="id_student" not-null="true" />
        </key>
        <one-to-many class="com.pasionatii.assistant.entity.Grade" />
    </set>
</joined-subclass>
</hibernate-mapping>

