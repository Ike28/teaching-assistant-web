<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.pasionatii.assistant.entity">
    <class name="Subject" table="subject">
        <id name="id" column="id">
            <generator class="assigned"/>
        </id>
        <property name="name" column="name"/>
        <set name="courses" table="course" inverse="true" cascade="save-update" lazy="true" fetch="select">
            <key>
                <column name="id_subject" not-null="true"/>
            </key>
            <one-to-many class="com.pasionatii.assistant.entity.Course"/>
        </set>
    </class>
</hibernate-mapping>
