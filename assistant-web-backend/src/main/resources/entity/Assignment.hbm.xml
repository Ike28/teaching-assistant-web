<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.pasionatii.assistant.entity">
    <class name="Assignment" table="assignment">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <many-to-one name="course" class="Course" column="id_course"/>
        <many-to-one name="assignedClass" class="Class" column="id_class" />
        <property name="doDate" column="doDate" type="java.time.LocalDateTime"/>
        <property name="text" column="text" type="string"/>
        <set name="assignmentStatuses" table="assignmentstatus" inverse="true" cascade="save-update" lazy="true" fetch="select">
            <key>
                <column name="id_assignment" not-null="true"/>
            </key>
            <one-to-many class="com.pasionatii.assistant.entity.AssignmentStatus"/>
        </set>
    </class>
</hibernate-mapping>
